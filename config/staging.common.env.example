# Shared runtime config for local side-by-side staging (v1 + v2).
# Copy to config/staging.common.env and fill values.

# Addon security
ADDON_SHARED_SECRET=

# Streaming mode
STREAMING_MODE=native

# Indexer manager
INDEXER_MANAGER=none
INDEXER_MANAGER_URL=
INDEXER_MANAGER_API_KEY=
INDEXER_MANAGER_STRICT_ID_MATCH=false
INDEXER_MANAGER_INDEXERS=-1

# Newznab (optional)
NEWZNAB_ENABLED=false
NEWZNAB_FILTER_NZB_ONLY=true
NEWZNAB_ENDPOINT_01=
NEWZNAB_API_KEY_01=
NEWZNAB_API_PATH_01=/api
NEWZNAB_NAME_01=Primary Newznab
NEWZNAB_INDEXER_ENABLED_01=true

# NZBDav (optional)
NZBDAV_URL=
NZBDAV_API_KEY=
NZBDAV_WEBDAV_URL=
NZBDAV_WEBDAV_USER=
NZBDAV_WEBDAV_PASS=
NZBDAV_CATEGORY=
NZBDAV_CATEGORY_MOVIES=Movies
NZBDAV_CATEGORY_SERIES=Tv

# Easynews (optional)
EASYNEWS_ENABLED=false
EASYNEWS_USERNAME=
EASYNEWS_PASSWORD=

# Triage NNTP (optional)
NZB_TRIAGE_ENABLED=false
NZB_TRIAGE_NNTP_HOST=
NZB_TRIAGE_NNTP_PORT=563
NZB_TRIAGE_NNTP_TLS=true
NZB_TRIAGE_NNTP_USER=
NZB_TRIAGE_NNTP_PASS=

# Metadata clients (optional)
TMDB_ENABLED=false
TMDB_API_KEY=
TVDB_ENABLED=false
TVDB_API_KEY=
