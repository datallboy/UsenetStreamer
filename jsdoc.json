{
  "source": {
    "include": [
      "src"
    ],
    "exclude": [
      "server.js",
      "src/utils/helpers.js",
      "src/utils/templateEngine.js",
      "src/services/metadata/releaseParser.js",
      "src/utils/lib/parse-torrent-title"
    ],
    "includePattern": ".+\\.js$",
    "excludePattern": "(^|\\/|\\\\)_|node_modules|\\.test\\.js$|\\.spec\\.js$"
  },
  "plugins": [
    "plugins/markdown"
  ],
  "opts": {
    "destination": "docs/jsdoc",
    "recurse": true,
    "readme": "README.md"
  }
}
